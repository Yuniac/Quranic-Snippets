{
	"name": "Quranic Snippets",
	"description": "Chrome extension that shows randomly selected verses from the noble Quran",
	"manifest_version": 2,
	"version": "1.7.4",
	"icons": {
		"16": "./logo16.png",
		"32": "./logo32.png"
	},
	"start_url": ".",
	"browser_action": {
		"default_popup": "index.html",
		"default_title": "Quranic Snippets"
	},
	"background": {
		"scripts": ["background.js"]
	},
	"permissions": ["storage"]
}
