{
	"name": "Quranic Snippets",
	"description": "Chrome extension that shows random verses from the noble Quran",
	"manifest_version": 2,
	"version": "1.1",
	"action": {
		"default_icon": {
			"16": "logo16.png",
			"32": "logo32.png"
		}
	},
	"start_url": ".",
	"browser_action": {
		"default_popup": "index.html",
		"default_title": "Quranic Snippets"
	},
	"background": {
		"scripts": ["background.js"]
	},
	"permissions": ["storage"]
}
